%form.form-horizontal(method="post" enctype='multipart/form-data')
  %fieldset
    %legend Migrate Excel sheets to BSI
    .control-group
      %label.control-label BSI Environment:
      .controls
        %select(name='bsi_env')
          %option Mirror
          %option Beta
    .control-group
      %label.control-label Data Migration Type
      .controls
        %select(name='data_type')
          %option Specimens
          %option Subjects
          %option Results (Beta)
    .control-group
      %label.control-label Job Specification
      .controls
        %select(name='spec')
          %option Beta
    .control-group
      %label.control-label HER2 Control ID:
      .controls
        %input(type='text' name='HER2_control_id')
    .control-group
      %label.control-label Excel File (.xls, .xlsx, .csv):
      .controls
        %input(type='file' name='fileupload')
        %input.btn-small.btn-info(type='submit' value='Upload')
